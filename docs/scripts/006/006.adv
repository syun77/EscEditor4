def init
{
}

def screw
{
	ITEM_CHK(ITEM_SCREWDRIVER)
	if(!$RET) {
		":プラスのネジがついてる"
		return
	}

	":ネジを外した"
	// 引き出し(左)を開くことができる
	%RELEASED_DRAWER1 = true
}

def open_drawer1
{
	if(%RELEASED_DRAWER1 == false) {
		":引き出しは開かない"
		return
	}
	// 引き出し(左)を引く
	%OPEN_DRAWER1 = true
}

def close_drawer1
{
	%OPEN_DRAWER1 = false
}

def triangle
{
	ITEM_ADD(ITEM_TRIANGLE)
}

def open_drawer2
{
	// 引き出し(右)を引く
	%OPEN_DRAWER2 = true
}

def close_drawer2
{
	%OPEN_DRAWER2 = false
}
